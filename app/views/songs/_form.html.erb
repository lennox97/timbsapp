<%= form_with(model: song, local: true) do |form| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label 'Titlu', :class => 'col-sm-2 col-form-label'%>
    <div class="col-sm-10" style="background-color: white">
        <%= form.text_field :title, :class=>'form-control-plaintext'%>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'Cântăreţ / Grup', :class => 'col-sm-2 col-form-label'%>
    <div class="col-sm-10" style="background-color: white">
        <%= form.text_field :singer, :class=>'form-control-plaintext'%>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :audio, :class => 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.file_field :audio %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.submit 'Salvează cântarea', class: 'btn btn-danger my-2 my-sm-0', role: 'button'%>
  </div>
<% end %>
