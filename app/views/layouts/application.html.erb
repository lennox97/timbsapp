<!DOCTYPE html>
<html>
<head>
  <title>Biserica Creştină Timişoara</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body style="background-color: seashell">
<div class="container">

  <% if user_signed_in? %>
    <div class="jumbotron jumbotron-fluid">
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

      <div class="navbar-header">
        <%= link_to 'Biserica Creştină', root_path, class: 'navbar-brand' %>
      </div>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">

          <li class="nav-item">
            <%= link_to 'Acasă', root_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to 'Live', root_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to 'Arhivă predici', root_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to 'Cântări', songs_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to 'Galerie imagini', root_path, class: 'nav-link' %>
          </li>

        </ul>
        <% if current_user.admin? %>
          <%= link_to 'CP', admin_root_path, class: 'btn btn-outline-danger my-2 my-sm-0', role: 'button', style: 'margin-right: 10px' %>
        <% end %>
        <%= link_to 'Ieşire', destroy_user_session_path, :method => 'delete', class: 'btn btn-outline-success my-2 my-sm-0', role: 'button' %>
      </div>
    </nav>
  <% end %>

</div>

  <% if user_signed_in? %>
    <div class="container">
      <%= yield %>
    </div>
  <% else %>
    <%= yield %>
  <% end%>
</body>
</html>