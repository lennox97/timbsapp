<div class="card" style="margin-top: 10px">
  <div class="card-body">

    <!-- Grid row -->
    <div class="row">

      <!-- Grid column -->
      <div class="col-md-12">

        <div class="input-group md-form form-sm form-2 pl-0 mb-0">
          <input class="form-control my-0 py-1 grey-border" type="text" id="searchInput" onkeyup="mySermonsSearchInput()" placeholder="Caută după numele predicii..." aria-label="Search">
          <div class="input-group-append">
                        <span class="input-group-text waves-effect grey lighten-3" id="basic-addon1">
                            <a><i class="fa fa-search text-grey" aria-hidden="true"></i></a>
                        </span>
          </div>
        </div>

      </div>
      <!-- Grid column -->

    </div>
    <!-- Grid row -->
    <br>
    <div style="overflow-x:auto;">
      <table id = "sermonsTable" class="table table-striped table-bordered table-hover" style="text-align: center;">
        <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Numele predicii</th>
          <th scope="col">Predicator</th>
          <th scope="col">Data</th>
          <th scope="col">Locul</th>
          <th scope="col">Audio</th>
          <th scope="col">Descarcă</th>
          <th scope="col">Video</th>
        </tr>
        </thead>

        <tbody>
        <% @sermons.each do |sermon| %>
          <tr>
            <td scope="row"><%= sermon.id %></td>
            <td style="font-weight: bold; text-wrap: normal"><%= sermon.title %></td>
            <td><%= sermon.preacher %></td>
            <td><%= sermon.date %></td>
            <td><%= sermon.place %></td>
            <td>
              <%= audio_tag(url_for(sermon.audio), autoplay: false, controls: true, style:"width:300px")%>
            </td>
            <td><%= link_to ' Descarcă', sermon.audio, download: '', :class => 'fa fa-download' %></td>
            <td><%= link_to ' Vizionează', sermon.video, :class=>'fa fa-video-camera' %></td>

<!--            <td><%#= link_to 'Show', sermon %></td>-->
<!--            <td><%#= link_to 'Edit', edit_sermon_path(sermon) %></td>-->
<!--            <td><%#= link_to 'Destroy', sermon, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
