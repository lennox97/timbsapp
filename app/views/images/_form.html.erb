<%= form_with(model: image, local: true) do |form| %>
  <% if image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
      <% image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label 'Id-ul albumului', :class => 'col-sm-2 col-form-label'%>
    <div class="col-sm-10" style="background-color: white">
        <%= form.text_field :gallery_id, :value => gallery_id, :class => 'form-control-plaintext'%>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'Titlu', :class => 'col-sm-2 col-form-label'%>
    <div class="col-sm-10" style="background-color: white">
        <%= form.text_field :title, :class => 'form-control-plaintext'%>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'Poză', :class => 'col-sm-2 col-form-label' %>
    <%= form.file_field :src, :class => 'form-control-image' %>
  </div>

  <div class="form-group row">
    <%= form.submit 'Salvează poza', class: 'btn btn-danger my-2 my-sm-0', role: 'button'%>
  </div>
<% end %>
