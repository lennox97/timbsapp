
<!-- Container for the image gallery -->
<div class="container" style="margin-top:10px;padding: 10px; background-color: #212529">

  <!-- Full-width images with number text -->
  <% @images.each do |image| %>
  <div class="mySlides" style="padding: 10px;">
    <div class="numbertext"><%= image.id.to_s + ' / '+ @images.count.to_s %></div>
    <%= image_tag(image.file, :class => 'myImg', alt: image.title) %>
  </div>
  <% end %>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>

  <!-- Image text -->
  <div class="caption-container">
    <p id="caption"></p>
  </div>

  <!-- Thumbnail images -->
  <div class="row" style="padding: 20px">
    <% @images.each do |image| %>
    <div class="column">
      <%= image_tag(image.file, style: 'width:100%', :class => 'demo cursor', onclick:'currentSlide('+image.id.to_s+')', alt: image.title) %>
    </div>
    <% end %>
  </div>
</div>
<br>

<script>
    showSlides(1);
</script>

<%= link_to 'New Image', new_image_path %>