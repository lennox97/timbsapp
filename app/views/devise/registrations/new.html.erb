<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'login100-form') do |f| %>

          <%= devise_error_messages! %>
          <span class="login100-form-title p-b-55">
						Înregistrare
          </span>


        <div class="wrap-input100 validate-input m-b-16">
          <%= f.text_field :last_name, :class => 'input100', autofocus: true, autocomplete: 'on', placeholder: 'Nume' %>
          <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-16">
          <%= f.text_field :first_name, :class => 'input100', autofocus: true, autocomplete: 'on', placeholder: 'Prenume' %>
          <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-16">
          <%= f.text_field :phone, :class => 'input100', autofocus: true, autocomplete: 'on', placeholder: 'Numărul de telefon' %>
          <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-16">
          <%= f.text_field :email, :class => 'input100', autofocus: true, autocomplete: 'email', placeholder: 'E-mail' %>
          <span class="focus-input100"></span>
        </div>

        <% if @minimum_password_length %>
          <em>(minim <%= @minimum_password_length %>  caractere)</em>
        <% end %><br/>
        <div class="wrap-input100 validate-input m-b-16">
          <%= f.password_field :password, :class => 'input100', autofocus: true, autocomplete: 'off', placeholder: 'Introduceţi o parolă' %>
          <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-16">
          <%= f.password_field :password_confirmation, :class => 'input100', autofocus: true, autocomplete: 'off', placeholder: 'Confirmaţi parola' %>
          <span class="focus-input100"></span>
        </div>

        <div class="container-login100-form-btn p-t-25">

          <%= f.submit 'Înregistrare', :class => 'login100-form-btn' %>
        </div>

        <div class="text-center w-full p-t-115">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>